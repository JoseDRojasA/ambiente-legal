---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/main.astro";
import { Image } from "astro:assets";

// Types
type BlogPost = CollectionEntry<"blog">;

const { slug } = Astro.params;

// Get all blog posts
const allPosts = await getCollection("blog");

// Find the current post by slug
const post = allPosts.find((post: BlogPost) => post.data.slug === slug);

// If no post found, return 404
if (!post) {
  return Astro.redirect("/404");
}

// Format date
const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return date.toLocaleDateString("es-ES", options);
};

// Get related posts (excluding current post)
const relatedPosts = allPosts
  .filter(
    (p: BlogPost) =>
      p.id !== post.id && p.data.categorySlug === post.data.categorySlug
  )
  .slice(0, 3);

// Prepare layout props
const layoutProps = {
  content: {
    title: post.data.title,
    description: post.data.description,
    type: "article",
    image: post.data.image,
  },
};

const matches = import.meta.glob("./../../blog/*.mdx", { eager: true });

const PostContent = (Object.values(matches).find(
  (post: any) => post.frontmatter.slug === slug
) as { Content: any })!.Content;
---

<Layout {...layoutProps}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-12">
      <div class="mb-4">
        <a
          href={`/blog/${post.data.categorySlug}`}
          class="text-primary-600 hover:text-primary-800 font-medium transition-colors"
        >
          {post.data.category}
        </a>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        {post.data.title}
      </h1>
      <div class="flex items-center gap-4 text-gray-600 mb-8">
        <span>{formatDate(post.data.date)}</span>
        <span>•</span>
        <span>Por {post.data.author}</span>
      </div>
      {
        post.data.image && (
          <div class="mt-8 rounded-xl overflow-hidden">
            <Image
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-auto"
              width={800}
              height={450}
            />
          </div>
        )
      }
    </header>

    <div class="prose">
      <PostContent />
    </div>

    {
      post.data.tags && post.data.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-medium mb-4">Etiquetas:</h3>
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <a
                href={`/blog/tags/${tag.toLowerCase().replace(/\s+/g, "-")}`}
                class="px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        </div>
      )
    }

    {
      relatedPosts.length > 0 && (
        <div class="mt-16">
          <h2 class="text-2xl font-bold mb-8">Artículos relacionados</h2>
          <div class="grid md:grid-cols-3 gap-6">
            {relatedPosts.map((post) => (
              <a
                href={`/blog/${post.data.categorySlug}/${post.data.slug}`}
                class="block group"
              >
                <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow h-full">
                  {post.data.image && (
                    <div class="aspect-video bg-gray-100">
                      <Image
                        src={post.data.image}
                        alt={post.data.title}
                        width={400}
                        height={225}
                        class="w-full h-full object-cover"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <span class="text-sm text-primary-600 font-medium">
                      {post.data.category}
                    </span>
                    <h3 class="text-xl font-bold mt-2 mb-3 group-hover:text-primary-600 transition-colors">
                      {post.data.title}
                    </h3>
                    <p class="text-gray-600 text-sm line-clamp-2">
                      {post.data.description}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      )
    }
  </article>
</Layout>
