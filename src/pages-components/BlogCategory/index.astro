---
import { getCollection, type CollectionEntry } from "astro:content";
import Main from "@/layouts/main.astro";

// Get the category slug from the URL
const { categorySlug } = Astro.params;

// Get all blog posts and filter by category
const allPosts = await getCollection("blog");

const categoryPosts = allPosts
  .filter(
    (post: CollectionEntry<"blog">) => post.data.categorySlug === categorySlug
  )
  .sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
      b.data.date.getTime() - a.data.date.getTime()
  );

// Get the category name from the first post (if available)
const categoryName = categoryPosts[0]?.data.category || "Category";
---

<Main
  content={{
    title: `${categoryName} | Blog`,
    description: `Descubre como mejorar tu restaurante con los mejores consejos y articulos`,
  }}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {categoryName}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        Artículos sobre {categoryName.toLowerCase()}
      </p>
    </header>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-2 w-full">
      {
        categoryPosts.map((post) => (
          <a
            href={`/blog/${post.data.categorySlug}/${post.data.slug}`}
            class="group rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 bg-white dark:bg-gray-800 h-full flex flex-col"
          >
            <div class="p-6 flex-1 flex flex-col">
              <div class="mb-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                  {post.data.category}
                </span>
              </div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4 flex-1">
                {post.data.description}
              </p>
              <div class="mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                  <time datetime={post.data.date.toISOString()} class="mr-4">
                    {new Intl.DateTimeFormat("es-ES", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    }).format(post.data.date)}
                  </time>
                  <span>por {post.data.author}</span>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    {
      categoryPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">
            No se encontraron artículos en esta categoría.
          </p>
        </div>
      )
    }
  </div>
</Main>
