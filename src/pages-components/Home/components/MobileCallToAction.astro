---
import { Button } from "@/components/ui/button";
import { generateWhatsAppLink } from "@/utils/generate-whatsapp-link";
import { ArrowRight } from "lucide-react";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Ambiente legal",
  url: "https://ambientelegal.com",
  potentialAction: {
    "@type": "SearchAction",
    target: generateWhatsAppLink("Me gustaría Te asesoramos"),
    query: "Te asesoramos con Ambiente legal",
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<nav
  class="flex md:hidden sticky bottom-0 left-0 bg-white py-4 px-5 border-t border-gray-200"
  aria-label="Acceso rápido a solicitud de demo"
>
  <a
    href={generateWhatsAppLink("Me gustaría Te asesoramos")}
    target="_blank"
    rel="noopener noreferrer nofollow"
    aria-label="Te asesoramos con Ambiente legal por WhatsApp. Se abrirá en una nueva pestaña."
    title="Agenda una cita con Ambiente legal"
    class="cursor-pointer w-full"
    data-cta="mobile-demo-request"
    itemscope
    itemtype="https://schema.org/ContactPoint"
  >
    <meta itemprop="contactType" content="customer service" />
    <meta itemprop="availableLanguage" content="es" />
    <meta itemprop="telephone" content="+573154395316" />

    <Button
      size="lg"
      className="cursor-pointer bg-law-primary hover:bg-law-primary/90 text-law-button-text text-lg px-8 py-3 w-full"
      aria-label="Te asesoramos con Ambiente legal"
    >
      <span itemprop="name">Te asesoramos</span>
      <ArrowRight className="ml-2 w-5 h-5" aria-hidden="true" />
    </Button>
  </a>
</nav>
