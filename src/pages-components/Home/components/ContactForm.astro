---
import { CustomQuery } from "@/components/custom-query";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { generateWhatsAppLink } from "@/utils/generate-whatsapp-link";
import { Clock, Mail, MapPin, Phone } from "lucide-react";

const handleWhatsAppRedirect = () => {
  const message = document.getElementById("message") as HTMLTextAreaElement;
  const text =
    message?.value ||
    "¡Hola! Me gustaría obtener más información sobre sus servicios legales.";
  const whatsappUrl = generateWhatsAppLink(text);
  window.open(whatsappUrl, "_blank");
};
---

<script>
  import { generateWhatsAppLink } from "@/utils/generate-whatsapp-link";

  const handleWhatsAppRedirect = () => {
    const message = document.getElementById(
      "custom-query-message"
    ) as HTMLTextAreaElement;
    const text =
      message?.value ||
      "¡Hola! Me gustaría obtener más información sobre sus servicios legales.";
    const whatsappUrl = generateWhatsAppLink(text);
    window.open(whatsappUrl, "_blank");
  };

  document.addEventListener("DOMContentLoaded", () => {
    document
      .getElementById("simple-button")
      ?.addEventListener("click", handleWhatsAppRedirect);
    document
      .getElementById("custom-query-button")
      ?.addEventListener("click", handleWhatsAppRedirect);
  });
</script>

<section id="contacto" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Contáctanos
      </h2>
      <p class="text-xl text-law-text max-w-3xl mx-auto">
        ¿Necesitas asesoría legal? Estamos aquí para ayudarte. Contáctanos y
        recibe una consulta gratuita para evaluar tu caso.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <Card className="shadow-lg">
        <CardHeader>
          <CardTitle className="text-2xl text-gray-900"
            >¿En qué podemos ayudarte?</CardTitle
          >
          <CardDescription className="text-law-text">
            Cuéntanos sobre tu situación y te contactaremos inmediatamente por
            WhatsApp
          </CardDescription>
        </CardHeader>
        <CardContent className="space-y-6">
          <CustomQuery client:load />

          <p class="text-sm text-law-text text-center mt-6">
            Te responderemos inmediatamente y programaremos una consulta
            gratuita
          </p>
        </CardContent>
      </Card>

      {/* Información de contacto */}
      <div class="space-y-8">
        <Card>
          <CardContent className="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">
              Información de Contacto
            </h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <Phone className="h-6 w-6 text-law-primary mt-0.5" />
                <div>
                  <div class="font-medium text-gray-900">Teléfono</div>
                  <div class="text-law-text">+57 315 439 5316</div>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <Mail className="h-6 w-6 text-law-primary mt-0.5" />
                <div>
                  <div class="font-medium text-gray-900">Email</div>
                  <div class="text-law-text">ambientelegalco@gmail.com</div>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <MapPin className="h-6 w-6 text-law-primary mt-0.5" />
                <div>
                  <div class="font-medium text-gray-900">Dirección</div>
                  <div class="text-law-text">
                    Carrera 11 #93-07, Oficina 501
                    <br />
                    Bogotá, Colombia
                  </div>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <Clock className="h-6 w-6 text-law-primary mt-0.5" />
                <div>
                  <div class="font-medium text-gray-900">Horarios</div>
                  <div class="text-law-text">
                    Lunes a Viernes: 8:00 AM - 6:00 PM
                    <br />
                    Sábados: 9:00 AM - 1:00 PM
                  </div>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </div>
</section>
