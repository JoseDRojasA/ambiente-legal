---
import { Button } from "@/components/ui/button";
import DealImage from "@/images/Deal.jpg";
import { Image } from "astro:assets";
import { Award, Shield, Users } from "lucide-react";
import { generateWhatsAppLink } from "@/utils/generate-whatsapp-link";
---

<section
  id="inicio"
  class="pt-16 bg-gradient-to-br from-gray-50 to-white fade-in-animation"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <div
            class="inline-block rounded-lg bg-law-primary/10 px-3 py-1 text-sm font-medium text-law-primary"
          >
            El vehículo estratégico entre tus sueños y el derecho
          </div>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight"
          >
            Protegemos tu activo más valioso:
            <span class="text-law-primary"> ¡Tus Sueños!</span>
          </h1>
          <p class="text-xl text-law-text leading-relaxed">
            Somos abogados especializados en Derecho Empresarial y Corporativo,
            dedicados a blindar, proteger y aportar a la creación segura y
            confiable de tus sueños, construyendo relaciones de largo plazo con
            el mundo.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href={generateWhatsAppLink(
              "¡Hola! Tengo una consulta urgente, ¿pueden ayudarme?"
            )}
            target="_blank"
          >
            <Button
              size="lg"
              className="bg-law-primary hover:bg-law-primary/90 text-law-button-text text-lg px-8 py-3 cursor-pointer"
            >
            Te asesoramos
            </Button>
          </a>
        </div>

        <div class="grid grid-cols-3 gap-8 pt-8 border-t border-gray-200">
          <div class="text-center">
            <Shield className="h-8 w-8 text-law-primary mx-auto mb-2" />
            <div class="text-2xl font-bold text-gray-900">20+</div>
            <div class="text-sm text-law-text">Años de Experiencia</div>
          </div>
          <div class="text-center">
            <Users className="h-8 w-8 text-law-primary mx-auto mb-2" />
            <div class="text-2xl font-bold text-gray-900">300+</div>
            <div class="text-sm text-law-text">Clientes Satisfechos</div>
          </div>
          <div class="text-center">
            <Award className="h-8 w-8 text-law-primary mx-auto mb-2" />
            <div class="text-2xl font-bold text-gray-900">99%</div>
            <div class="text-sm text-law-text">Casos Exitosos</div>
          </div>
        </div>
      </div>

      <div class="relative">
        <div
          class="aspect-square bg-gradient-to-br from-law-primary/20 to-law-primary/5 rounded-2xl"
        >
          <Image
            src={DealImage}
            alt="Equipo de abogados profesionales"
            class="w-full h-full object-cover rounded-xl shadow-2xl"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>
</section>
